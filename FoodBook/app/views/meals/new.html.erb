<div class="contrainer">
  <%= form_for @meal  do |f| %>

    <div class="form-group">
      <label for="dish_name">Name of the Meal</label>
      <input type="text" name="meal[name]" id="meal_name" class="form-control">
    </div>

    <div class="form-group">
      <label for="dish_name">Price of the Meal</label>
      <input type="number" name="meal[price]" id="meal_price" class="form-control">
    </div>

    <div class="form-group">
      <label for="dish_name">Restaurant of the Meal</label>
      <input type="text" name="meal[restaurant]" id="meal_restaurant" class="form-control">
    </div>

    <div class="form-group">
      <label for="dish_name">City of the Meal</label>
      <input type="text" name="meal[city]" id="meal_city" class="form-control">
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
  <% end %>
</div>
